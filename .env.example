# ============================================
# Griot and Grits - Environment Configuration
# ============================================
# Not all options are in use!


# Application Settings
ENVIRONMENT=development
APP_NAME=Griot and Grits API
APP_VERSION=0.1.0
DEBUG=true

CORS_ALLOWED_ORIGINS=http://localhost:3000,https://griotandgrits.org

# ============================================
# Database Configuration (MongoDB)
# ============================================
DB_URI=mongodb://admin:password@localhost:27017/
DB_NAME=gngdb
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=1

# ============================================
# Hot Storage Configuration (MinIO/S3)
# ============================================
# MinIO endpoint (no http/https prefix)
STORAGE_ENDPOINT=localhost:9000
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin
STORAGE_BUCKET=artifacts
STORAGE_REGION=us-east-1
# Set to false for local development without TLS
STORAGE_SECURE=false

# ============================================
# Archive Storage Configuration (Globus)
# ============================================
# Enable Globus integration for long-term archival
# Set to true after configuring Globus credentials
GLOBUS_ENABLED=false

# Globus endpoint ID for BU archive cluster
# Get this from your Globus endpoint details
# Example: 1234abcd-5678-90ef-ghij-klmnopqrstuv
GLOBUS_ENDPOINT_ID=

# Base path on Globus filesystem
# Packages will be created under: {base_path}/{YYYY-MM}/{slug}/
# Example: /archive/griot-and-grits/
GLOBUS_BASE_PATH=/archive/

# Globus application credentials
# Register your app at: https://developers.globus.org/
# Use "Confidential Client" for server-side authentication
GLOBUS_CLIENT_ID=
GLOBUS_CLIENT_SECRET=

# ============================================
# Processing Configuration
# ============================================
# Processing mode: "sync" for immediate processing, "async" for background jobs
PROCESSING_MODE=sync

# Celery configuration (required for async mode)
PROCESSING_CELERY_BROKER_URL=redis://localhost:6379/0
PROCESSING_CELERY_RESULT_BACKEND=redis://localhost:6379/0

# External service URLs
PROCESSING_TRANSCRIPTION_API_URL=

# Feature flags
PROCESSING_ENABLE_METADATA_EXTRACTION=true
PROCESSING_ENABLE_TRANSCRIPTION=false
PROCESSING_ENABLE_LLM_ENRICHMENT=false
